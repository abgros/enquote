{
	"manifest_version": 3,
	"name": "Quote Maker",
	"version": "1.0",
	"description": "Quickly generate Wiktionary quotes",
	"permissions": [
		"tabs",
		"scripting",
		"webNavigation"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action": {
		"default_popup": "main.html",
		"default_icon": {
			"16": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
		}
	},
	"background": {
		"service_worker": "background.js",
		"scripts": ["background.js"],
		"type": "module"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}
}