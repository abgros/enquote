{
	"manifest_version": 3,
	"name": "Enquote",
	"version": "1.5",
	"description": "Quickly generate Wiktionary quotes",
	"permissions": [
		"activeTab",
		"tabs",
		"scripting",
		"storage",
		"clipboardRead"
	],
	"host_permissions": [
		"https://archive.ph/*"
	],
	"action": {
		"default_popup": "main.html",
		"default_icon": {
			"16": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
		}
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}
}