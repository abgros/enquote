{
	"manifest_version": 3,
	"name": "Enquote",
	"version": "1.7",
	"description": "Quickly generate Wiktionary quotes",
	"permissions": [
		"activeTab",
		"tabs",
		"scripting",
		"storage",
		"clipboardRead"
	],
	"host_permissions": ["https://archive.ph/*"],
	"action": {
		"default_popup": "main.html",
		"default_icon": {
			"16": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
		}
	},
	"background": {
		"scripts": ["background.js"],
		"type": "module"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{31415926-5358-4793-a384-626433832795}"
		}
	}
}
