{
	"manifest_version": 3,
	"name": "Enquote",
	"version": "1.0",
	"description": "Quickly generate Wiktionary quotes",
	"permissions": [
		"tabs",
		"scripting",
		"webNavigation",
		"clipboardRead"
	],
	"host_permissions": [
		"https://x.com/*",
		"https://www.reddit.com/*",
		"https://archive.ph/*",
		"https://www.nytimes.com/*",
		"https://www.theguardian.com/*"
	],
	"action": {
		"default_popup": "main.html",
		"default_icon": {
			"16": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
		}
	},
	"background": {
		"scripts": ["background.js"],
		"type": "module"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}
}